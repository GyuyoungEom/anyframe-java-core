<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="util-system-demo" description="Util System Demo Plugin consists of sample code that provides dashboard-style UI for System Resource usages with Util-System services which using Sigar, and reference libraries needed to use these open sources.">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-util-system-demo-pi</artifactId>
  <version>1.0.0.RC1</version>
  <dependent-plugins>
    <dependent-plugin name="util-system" version="2.0.0&gt;*"/>
    <dependent-plugin name="chart" version="2.0.0&gt;*"/>
    <dependent-plugin name="simpleweb-jquery" version="2.0.0&gt;*"/>
  </dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/main/resources" filtered="false" packaged="false">
      <include name="**/util-system-demo/**/*.*"/>
    </resource>
    <resource dir="src/main/webapp" filtered="false" packaged="false">
      <include name="**/util-system-demo/**/*.*"/>
    </resource>
    <resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
      <include name="**/*.jsp"/>
    </resource>
  </resources>
  <build>
    <filesets>
      <fileset dir="src/main/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/util/system/demo/**/*.java"/>
      </fileset>
	  <fileset dir="src/main/resources" filtered="false" packaged="false">
        <include name="**/util-system-demo/**/*.*"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="false" packaged="false">
        <include name="**/util-system-demo/**/*.*"/>
        <include name="**/anyframe.jsp"/>
      </fileset>
    </filesets>
  </build>
  <samples>true</samples>
  <interceptor>
    <class></class>
  </interceptor>
  <essential>false</essential>
</plugin>