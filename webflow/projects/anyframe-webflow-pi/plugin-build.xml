<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="webflow" description="Webflow Plugin consists of sample code that provides basic guidelines on how to use Spring Web Flow which is one of the Spring projects, and reference libraries needed to use these open sources.">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-webflow-pi</artifactId>
  <version>1.0.0</version>
  <dependent-plugins>
    <dependent-plugin name="query" version="2.0.0&gt;*"/>
  </dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/main/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/test/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/test/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
      <include name="**/*.jsp"/>
    </resource>
    <resource dir="src/main/webapp" filtered="true" packaged="false">
      <include name="**/webflow/**/*-flow.xml"/>
    </resource>
  </resources>
  <build>
    <filesets>
      <fileset dir="src/main/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/webflow/**/*.java"/>
      </fileset>
      <fileset dir="src/main/resources" filtered="true" packaged="false">
        <include name="**/*webflow*.xml"/>
      </fileset>
      <fileset dir="src/test/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/webflow/**/*.java"/>
      </fileset>
      <fileset dir="src/test/resources" filtered="true" packaged="false">
        <include name="**/*webflow*.xml"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="true" packaged="false">
        <include name="**/webflow/**/*-flow.xml"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="false" packaged="false">
         <include name="**/webflow/**/*.jsp"/>
        <include name="**/web.xml"/>
        <include name="**/anyframe.jsp"/>
      </fileset>
      <fileset dir="db/resources" filtered="false" packaged="false">
        <include name="**/*.*"/>
      </fileset>
    </filesets>
  </build>
  <samples>true</samples>
  <essential>false</essential>
  <checked>false</checked>
</plugin>