<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="login" description="Login plugin consists of sample code that provides functionality LocaleResolver handling Internalization.">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-login-pi</artifactId>
  <version>1.0.0</version>
  <dependent-plugins>
    <dependent-plugin name="core" version="2.0.0&gt;*"/>
    <dependent-plugin name="logging" version="1.0.0"/>
    <dependent-plugin name="spring" version="1.0.0"/>
    <dependent-plugin name="datasource" version="1.0.0"/>
  </dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/main/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/test/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/test/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
      <include name="**/*.jsp"/>
    </resource>
  </resources>
  <build>
    <filesets>
      <fileset dir="src/main/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/login/**/*.java"/>
      </fileset>
      <fileset dir="src/main/resources" filtered="true" packaged="false">
        <include name="**/login-*.xml"/>
      </fileset>
      <fileset dir="src/test/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/login/**/*.java"/>
      </fileset>
      <fileset dir="src/test/resources" filtered="true" packaged="false">
        <include name="**/login-*.xml"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="false" packaged="false">
        <include name="**/login/**/*.*"/>
        <include name="**/web.xml"/>
        <include name="**/anyframe.jsp"/>
      </fileset>
    </filesets>
  </build>
  <samples>true</samples>
  <interceptor>
    <class></class>
  </interceptor>
  <essential>false</essential>
</plugin>