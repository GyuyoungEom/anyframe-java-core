<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="simpleweb-jquery" description="Simpleweb-jQuery Plugin consists of sample code using appropriate functions such as common controllers and tag libraries provided in Anyframe for the simplification of web development, and it provides the way for integration of jQuery.">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-simpleweb-jquery-pi</artifactId>
  <version>1.0.1</version>
  <dependent-plugins>
    <dependent-plugin name="simpleweb" version="2.0.0&gt;*"/>
  </dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/main/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/test/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/test/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
      <include name="**/*.jsp"/>
    </resource>
    <resource dir="src/main/webapp" filtered="false" packaged="false">
        <include name="**/simpleweb-jquery/**/*.*"/>
        <include name="**/simpleweb-jquery-*.xml"/>
    </resource>
    <resource dir="db/scripts" filtered="false" packaged="false">
        <include name="**/simpleweb-jquery-*.sql"/>
    </resource>
  </resources>
  <build>
    <filesets>
      <fileset dir="src/main/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/simpleweb/jquery/**/*.java"/>
      </fileset>
      <fileset dir="src/main/resources" filtered="true" packaged="false">
        <include name="**/*simpleweb-jquery*.xml"/>
      </fileset>
      <fileset dir="src/test/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/simpleweb/jquery/**/*.java"/>
      </fileset>
      <fileset dir="src/test/resources" filtered="true" packaged="false">
        <include name="**/*simpleweb-jquery*.xml"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="false" packaged="false">
        <include name="**/simpleweb-jquery/**/*.*"/>
        <include name="**/simpleweb-jquery-*.xml"/>
        <include name="**/tiles-views.xml"/>
        <include name="**/anyframe.jsp"/>
      </fileset>
      <fileset dir="db/scripts" filtered="false" packaged="false">
        <include name="**/simpleweb-jquery-*.sql"/>
      </fileset>
      <fileset dir="db/resources" filtered="false" packaged="false">
        <include name="**/*.*"/>
      </fileset>
    </filesets>
  </build>
  <samples>true</samples>
  <essential>false</essential>
  <checked>false</checked>
</plugin>